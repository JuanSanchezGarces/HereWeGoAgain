<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">

    <!-- Background image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/white_background"
        android:contentDescription="Background Image"
        android:alpha="0.2" />

    <!-- Header -->
    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOOKOUT"
        android:textColor="#3E50B4"
        android:fontFamily="@font/montserrat"
        android:textSize="50sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:background="#ffffff"
        android:elevation="4dp"
        android:layout_alignParentTop="true" />

    <!-- Container for contact cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/statusTextView"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <!-- Primeiro cartão de contato -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/contactTitleTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contato 1"
                    android:textColor="#3E50B4"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_person"
                        app:tint="#3E50B4"
                        android:padding="12dp" />

                    <EditText
                        android:id="@+id/contactNameEditText1"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:hint="Nome do Contato"
                        android:textColor="#000000"
                        android:textColorHint="#888888"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:padding="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_phone"
                        app:tint="#3E50B4"
                        android:padding="12dp" />

                    <EditText
                        android:id="@+id/contactPhoneEditText1"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:hint="Telefone"
                        android:textColor="#000000"
                        android:textColorHint="#888888"
                        android:inputType="phone"
                        android:padding="10dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Segundo cartão de contato -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/contactTitleTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contato 2"
                    android:textColor="#3E50B4"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_person"
                        app:tint="#3E50B4"
                        android:padding="12dp" />

                    <EditText
                        android:id="@+id/contactNameEditText2"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:hint="Nome do Contato"
                        android:textColor="#000000"
                        android:textColorHint="#888888"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:padding="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_phone"
                        app:tint="#3E50B4"
                        android:padding="12dp" />

                    <EditText
                        android:id="@+id/contactPhoneEditText2"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:hint="Telefone"
                        android:textColor="#000000"
                        android:textColorHint="#888888"
                        android:inputType="phone"
                        android:padding="10dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/salvarNumeroButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF5733"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat" />

        <!-- Espaçador vazio para empurrar o botão para a parte inferior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/voltarParaPaginaInicial"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Voltar à Página Inicial"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF5733"
            android:layout_marginTop="16dp"
            android:onClick="voltarParaPaginaInicial"
            android:fontFamily="@font/montserrat" />
    </LinearLayout>
</RelativeLayout>
